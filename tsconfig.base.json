{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["./api/src/*"],
      "@web/*": ["./web/src/*"],
      "@mobile/*": ["./mobile/src/*"]
    }
  }
}
